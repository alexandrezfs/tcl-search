<body>

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            {{#if insearch}}
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            {{/if}}
            <a href="/" class="navbar-brand"><i class="fa fa-subway"></i> Prochains passages TCL</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            {{#if insearch}}
                <div class="col-sm-5 pull-left" style="padding-top:5px;">
                    <a href="/line/301A">
                        <img src="/img/A.png">
                    </a>
                    <a href="/line/302A">
                        <img src="/img/B.png">
                    </a>
                    <a href="/line/303">
                        <img src="/img/C.png">
                    </a>
                    <a href="/line/304">
                        <img src="/img/D.png">
                    </a>
                    <a href="/line/T1A">
                        <img src="/img/T1.png">
                    </a>
                    <a href="/line/T2">
                        <img src="/img/T2.png">
                    </a>
                    <a href="/line/T3">
                        <img src="/img/T3.png">
                    </a>
                    <a href="/line/T4A">
                        <img src="/img/T4.png">
                    </a>
                    <a href="/line/T5">
                        <img src="/img/T5.png">
                    </a>
                </div>
                <div class="col-sm-3 col-md-3 pull-right">
                    <form class="navbar-form" action="/search/stop" method="POST" class="form-inline">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-flag-checkered"></i></span>

                            <div class="form-group">
                                <input type="text" class="form-control" id="keyword" name="keyword"
                                       placeholder="Ex: Gare Part-Dieu" required>
                            </div>
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-success">Trouver</button>
                            </span>
                        </div>
                    </form>
                </div>

            {{else}}

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/alerts"><i class="fa fa-bell"></i> Alertes Traffic</a></li>
                </ul>

            {{/if}}
        </div>
    </div>
</div>

<div id="wrap">
    <div id="main" class="container clear-top">
        {{{ body }}}
    </div>
</div>


